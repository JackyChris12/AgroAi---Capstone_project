<!-- views/diagnosis.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AgroAI - Smart Diagnosis</title>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      body {
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(to bottom right, #e6ffe6, #ccffcc);
        margin: 0;
        padding: 0;
        color: #2d6a4f;
      }

      .hero {
        background: linear-gradient(135deg, #3fa34d 0%, #207227 100%);
        color: white;
        text-align: center;
        padding: 80px 20px;
        position: relative;
        overflow: hidden;
      }

      .hero h1 {
        font-size: 3em;
        animation: fadeInDown 1s ease;
      }

      .quotes {
        font-size: 1.2em;
        margin-top: 20px;
        animation: fadeInUp 1.5s ease;
      }

      .container {
        max-width: 700px;
        margin: 40px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 100, 0, 0.1);
      }

      textarea {
        width: 100%;
        height: 150px;
        padding: 15px;
        border: 2px solid #2d6a4f;
        border-radius: 10px;
        resize: none;
        font-size: 1em;
        margin-bottom: 15px;
      }

      input[type="file"] {
        margin-bottom: 15px;
      }

      button {
        background-color: #2d6a4f;
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1em;
      }

      .response-box {
        margin-top: 30px;
        padding: 20px;
        background: #f0fff0;
        border-left: 5px solid #2d6a4f;
        border-radius: 8px;
        white-space: pre-wrap;
      }

      @keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-30px); }
        to { opacity: 1; transform: translateY(0); }
      }

      @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
      }
    </style>
  </head>
  <body>
    <div class="hero">
      <h1>AgroAI Smart Diagnosis</h1>
      <div class="quotes">
        <p>üå± Grow Healthy Crops, Harvest Abundance</p>
        <p>üêÑ Your Breed, Your Life</p>
        <p>üåæ Healthy Soils, Prosperous Farms</p>
        <p>üçÖ A Healthy Farm is a Wealthy Farm</p>
        <p>üåø Smart Farming Begins with Smart Diagnosis</p>
        <p>üöú Ask. Diagnose. Treat. Thrive.</p>
      </div>
    </div>

    <div class="container">
      <form action="/diagnose" method="POST" enctype="multipart/form-data">
        <label for="question"><strong>Ask your farming question:</strong></label>
        <textarea
          name="question"
          id="question"
          placeholder="e.g. My maize leaves are turning yellow, what could be wrong?"
        ></textarea>

        <label for="image"><strong>Upload image (optional):</strong></label>
        <input type="file" name="image" accept="image/*" />

        <button type="submit">Submit Diagnosis</button>
      </form>

      <% if (response) { %>
        <div class="response-box">
          <h3>AgroAI says:</h3>
          <p><%= response %></p>
        </div>
      <% } %>
    </div>
  </body>
</html>
