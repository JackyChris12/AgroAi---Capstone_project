<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AgroAI Interface</title>
    <style>
      body {
        background: #eef7ee;
        margin: 0;
        font-family: Arial, sans-serif;
      }

      .container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-size: 24px;
      }

      h1 {
        font-size: 22px;
        color: #2e7d32;
        margin-bottom: 20px;
      }

      .input-section {
        background-color: #f5f5f5;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        margin-bottom: 20px;
      }

      label {
        font-size: 14px;
        color: #333;
        margin-bottom: 8px;
        display: block;
        text-align: left;
      }

      input[type="text"] {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        margin-bottom: 10px;
      }

      .buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .buttons button {
        font-size: 16px;
        padding: 8px 12px;
        background-color: #2e7d32;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      .buttons button:hover {
        background-color: #27672b;
      }

      .buttons span {
        font-size: 16px;
        color: #555;
      }

      .action-buttons {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 10px;
      }

      .action-buttons button {
        flex: 1 1 calc(50% - 10px);
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        cursor: pointer;
        background-color: #e0e0e0;
        transition: background-color 0.3s ease;
      }

      .action-buttons button:hover {
        background-color: #d5d5d5;
      }

      .action-buttons button:last-child {
        background-color: #ff6200;
        color: white;
      }

      .response {
        margin-top: 20px;
        text-align: left;
        color: #444;
        font-size: 15px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>
        Welcome, <span id="username">Farmer</span><br />How can AgroAI assist
        your farm today?
      </h1>

      <div class="input-section">
        <label for="query">Ask about crop diseases or treatments</label>
        <input
          type="text"
          id="query"
          name="query"
          placeholder="e.g., Maize blight or chicken health"
        />
        <div class="buttons">
          <button title="Notifications">üîî</button>
          <button onclick="askAgroAI()">
            <span style="color: white">üåø</span> AgroAI
          </button>
          <button title="Let AgroAI Think">ü§î Think</button>
          <span>AgroAI</span>
          <button title="Scroll to Top">‚Üë</button>
        </div>
      </div>

      <div class="action-buttons">
        <button>üå± Crop Diagnosis</button>
        <button>üêî Animal Health</button>
        <button>üåæ Soil Insights</button>
        <button>üë®‚Äçüåæ Farmer Profiles</button>
        <button>üè° Farm Management New</button>
      </div>

      <div id="response" class="response"></div>
    </div>

    <script>
      // Username update (temporary local usage)
      const username = localStorage.getItem("username") || "Farmer";
      document.getElementById("username").textContent = username;

      // Ask AgroAI
      async function askAgroAI() {
        const query = document.getElementById("query").value.trim();
        const responseBox = document.getElementById("response");
        if (!query) {
          responseBox.textContent =
            "Please enter a question about your crops or animals.";
          return;
        }

        responseBox.textContent = "Thinking... ü§î (This can take a few seconds)";

        try {
          const res = await fetch("/diagnosis", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ query }),
          });

          const data = await res.json();
          responseBox.textContent = data.answer || "No answer received.";
        } catch (error) {
          console.error("AgroAI error:", error);
          responseBox.textContent =
            "There was a problem processing your question.";
        }
      }
      
    </script>
  </body>
</html>
