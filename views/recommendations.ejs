<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recommendations</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/_header') %>

  <h2>Crop Recommendations</h2>
  <% if (crops && crops.length > 0) { %>
    <ul>
      <% crops.forEach(crop => { %>
        <li>
          <h3><%= crop.name %></h3>
          <p>Soil Type: <%= crop.soil_type %></p>
          <p>Climate Conditions: <%= crop.climate_conditions %></p>
          <p>Region: <%= crop.region %></p>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No crops found for the given criteria</p>
  <% } %>

  <h2>Livestock Recommendations</h2>
  <% if (livestock && livestock.length > 0) { %>
    <ul>
      <% livestock.forEach(animal => { %>
        <li>
          <h3><%= animal.name %></h3>
          <p>Livestock Type: <%= animal.livestock_type %></p>
          <p>Region: <%= animal.region %></p>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No livestock found for the given criteria</p>
  <% } %>
</body>
</html>
